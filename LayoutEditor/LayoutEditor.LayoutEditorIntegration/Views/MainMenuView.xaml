<UserControl x:Class="LayoutEditor.LayoutEditorIntegration.Views.MainMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <Border BorderThickness="0,0,0,1" BorderBrush="Gray">
        <Grid x:Name="LayoutRoot" Height="35" Background="AliceBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Content="Setup" Command="{Binding ClickCommand}" CommandParameter="Setup" Margin="10,5" />
        </Grid>
    </Border>
</UserControl>