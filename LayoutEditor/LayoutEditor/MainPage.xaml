<UserControl x:Class="LayoutEditor.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:LayoutEditor.Views"
    xmlns:viewModels="clr-namespace:LayoutEditor.Common.ViewModels"
    xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
    >

    <UserControl.Resources>
        <DataTemplate DataType="viewModels:WorkAreaViewModel">
            <views:WorkAreaView />
        </DataTemplate>
    </UserControl.Resources>

    <controlsToolkit:BusyIndicator IsBusy="{Binding IsBusy}">
        <Grid x:Name="LayoutRoot" Background="AliceBlue">
            <ContentControl Content="{Binding Content}" Grid.Row="1" Grid.Column="1" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
        </Grid>
    </controlsToolkit:BusyIndicator>
</UserControl>